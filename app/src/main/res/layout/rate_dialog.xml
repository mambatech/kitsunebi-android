<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_radius_12_white">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_box_close" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/color_222222"
        android:text="@string/would_you_give_us_5_stars"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv_star_1"
        app:layout_constraintVertical_chainStyle="packed"/>

    <ImageView
        android:id="@+id/iv_star_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_star_default"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_star_2"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="26dp" />

    <ImageView
        android:id="@+id/iv_star_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_star_default"
        app:layout_constraintLeft_toRightOf="@id/iv_star_1"
        app:layout_constraintRight_toLeftOf="@id/iv_star_3"
        app:layout_constraintTop_toTopOf="@id/iv_star_1"
        android:layout_marginLeft="16dp"/>

    <ImageView
        android:id="@+id/iv_star_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_star_default"
        app:layout_constraintLeft_toRightOf="@id/iv_star_2"
        app:layout_constraintRight_toLeftOf="@id/iv_star_4"
        app:layout_constraintTop_toTopOf="@id/iv_star_1"
        android:layout_marginLeft="16dp"/>

    <ImageView
        android:id="@+id/iv_star_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_star_default"
        app:layout_constraintLeft_toRightOf="@id/iv_star_3"
        app:layout_constraintRight_toLeftOf="@id/iv_star_5"
        app:layout_constraintTop_toTopOf="@id/iv_star_1"
        android:layout_marginLeft="16dp"/>

    <ImageView
        android:id="@+id/iv_star_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_star_default"
        app:layout_constraintLeft_toRightOf="@id/iv_star_4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_star_1"
        android:layout_marginLeft="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>